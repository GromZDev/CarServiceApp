<resources>

    <style name="CompaniesNearRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/item_near_companies_recycler_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CompaniesAllServicesRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/item_near_companies_recycler_background</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ShowClientsAnnouncementsRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/item_near_companies_recycler_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="ShowPersonalServiceRequestsRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/item_near_companies_recycler_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="My_Bottom_Sheet_Line">
        <item name="android:layout_width">@dimen/bottom_sheet_line_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_line_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:background">@color/bottom_sheet_line_background</item>
    </style>
    <style name="ItemCompanyLogoRounded">
        <item name="cornerSize">12%</item>
    </style>

    <style name="ItemRounded">
        <item name="cornerSize">15%</item>
    </style>

    <style name="CompanyImgItemCircle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CompaniesTelNumbersRecyclerItem" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/benton_sans_book</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

</resources>