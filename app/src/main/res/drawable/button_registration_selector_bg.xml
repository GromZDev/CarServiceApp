<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"> <!--Кнопка при нажатии: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/main_button_selected_bg" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_enabled="true"> <!--Кнопка статичная: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/main_button_bg" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>