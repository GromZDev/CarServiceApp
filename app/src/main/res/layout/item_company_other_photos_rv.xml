<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container_rv_horizontal"
    style="@style/CompaniesAllServicesRecyclerItem"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_organisation_profile_service_image_in_rv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:contentDescription="@string/company_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_organisation_profile_service_image_in_rv"
        tools:text="Описание фотографии" />

</androidx.constraintlayout.widget.ConstraintLayout>