<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:text="@string/more_menu_main_tw"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_textview" />

    <TextView
        android:id="@+id/settings_textview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/menu_more_settings"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/settings_icon"
        app:layout_constraintTop_toBottomOf="@+id/header_textview" />

    <TextView
        android:id="@+id/my_top_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_favorite_services"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textview" />

    <TextView
        android:id="@+id/my_top_textview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/my_top_services"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/my_top_icon"
        app:layout_constraintTop_toBottomOf="@+id/settings_textview" />

    <TextView
        android:id="@+id/history_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_top_textview" />

    <TextView
        android:id="@+id/history_textview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/history_search_tw"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/history_icon"
        app:layout_constraintTop_toBottomOf="@+id/my_top_textview" />

    <TextView
        android:id="@+id/share_button"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/main_button_background"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:drawableStartCompat="@drawable/ic_share_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_textview"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/text_share_hint"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/share_with_friends"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/share_button"
        app:layout_constraintTop_toTopOf="@+id/share_button" />

    <TextView
        android:id="@+id/text_share_hint_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/share_link"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/share_button"
        app:layout_constraintTop_toBottomOf="@+id/text_share_hint" />
    <TextView
        android:id="@+id/exit_personal_account_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_exit_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_button" />

    <TextView
        android:id="@+id/exit_personal_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/exit_account"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/exit_account_icon"
        app:layout_constraintTop_toBottomOf="@+id/share_button" />

    <TextView
        android:id="@+id/exit_account_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_exit_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_button" />

    <TextView
        android:id="@+id/exit_account_textview"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/benton_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/exit_account"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/exit_account_icon"
        app:layout_constraintTop_toBottomOf="@+id/share_button" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="text_share_hint, text_share_hint_second, share_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>