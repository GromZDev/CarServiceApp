<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_film_container_rv_vertical"
    style="@style/CompaniesAllServicesRecyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_service_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/company_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_theme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/company_announcement_rv_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_service_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название объявления" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_overview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_service_image"
        app:layout_constraintTop_toBottomOf="@+id/item_service_theme"
        tools:text="Описание объявления" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_price_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:text="@string/org_announcement_cost"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/item_service_price"
        app:layout_constraintStart_toEndOf="@+id/item_service_image"
        app:layout_constraintTop_toBottomOf="@+id/item_service_overview" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/company_announcement_rv_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_service_price_tw"
        app:layout_constraintTop_toBottomOf="@+id/item_service_overview"
        tools:text="14 000" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_id_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:text="@string/org_announcement_id"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_service_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/item_service_id_tw"
        app:layout_constraintTop_toBottomOf="@id/item_service_image"
        tools:text="475786863737" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_service_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_service_id"
        tools:text="29.01.2022" />


</androidx.constraintlayout.widget.ConstraintLayout>