<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_film_container_rv_vertical"
    style="@style/ShowPersonalServiceRequestsRecyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="4dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_personal_service_requests_theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/profile_name_color"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Шумоизоляция и автозвук" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_personal_service_request_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_medium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_personal_service_requests_theme_name"
        tools:text="Это описание заявки клиента. Это описание заявки клиента. Это описание заявки клиента" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_personal_service_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_medium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_personal_service_request_overview"
        tools:text="21.01.2022" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_personal_service_request_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_medium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_personal_service_request_overview"
        tools:text="5000" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_personal_service_request_price_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/benton_sans_medium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/approximate_price"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/item_personal_service_request_price"
        app:layout_constraintTop_toBottomOf="@+id/item_personal_service_request_overview"/>

</androidx.constraintlayout.widget.ConstraintLayout>